#alias pagent-noop='sudo puppet agent --enable ;sudo puppet agent -t --environment bhitchcoxlai --noop ;sudo puppet agent --disable "bhitchcoxlai locked for testing on `date`" '

# Repository Aliases
alias pullall='pushd . ;for r in `find ~/repos/ -mindepth 1 -maxdepth 1 -type d`;do echo $r && cd $r && git pull ; done; popd'

# Git Aliases
alias gp='git pull --rebase'
alias gcm='git commit'
alias gnb='git checkout -b'

# tmux Aliases
alias mux='tmuxinator'
alias ta='tmux a'

EDITOR="vim"
export EDITOR
