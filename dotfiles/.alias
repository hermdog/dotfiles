# some more ls aliases
alias ll='ls -lart'
alias llh='ls-larth'
alias la='ls -A'
alias l='ls -CF'

# Grep Aliases
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Vim Aliases
alias vi='vim'

# Navigation Aliases
alias cdp6='cd ~/repos/puppet6'
alias cdp3='cd ~/repos/puppet3'
alias cddns='cd ~/repos/dns'

# puppet Commands
